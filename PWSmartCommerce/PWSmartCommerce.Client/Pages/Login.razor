@page "/login"
@using PWSmartCommerce.Client.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
<h3>Login</h3>
<div>
  <label>Username:</label>
  <input @bind="_userName" />
</div>
<div>
  <label>Password:</label>
  <input @bind="_password" type="password" />
</div>
<button @onclick="LoginOnClick">Login</button>

@code {
  private string _userName = string.Empty;
  private string _password = string.Empty;

  private async Task LoginOnClick()
  {
    if (await AuthService.LoginAsync(_userName, _password))
      Navigation.NavigateTo("/");
    else
      Console.WriteLine("Login Fail.");
  }
}